<div class="container">
  <div class="row justify-content-center align-items-center text-center">
    <form class="" action="/records/{{ record._id }}?_method=PUT" method="POST" onsubmit="return submitCheck()">
      <input required type="text" placeholder="名稱" name="name" class="form-control input-area"
        value="{{ record.name }}">
        <input required type="text" placeholder="商家" name="merchant" class="form-control input-area" value="{{ record.merchant }}">
      <input required type="text" placeholder="日期" name="date" class="form-control input-area"
        onfocus="(this.type='date')" onblur="(this.type='text')" value="{{ record.date }}">
      <div class="form-group">
        <select required name="category" class="form-control category-selector">
          <option value="">類別</option>
          <option {{#eq record.category 'house'}}selected{{/eq}} value="house">家居物業</option>
          <option {{#eq record.category 'transport'}}selected{{/eq}} value="transport">交通出行</option>
          <option {{#eq record.category 'entertainment'}}selected{{/eq}} value="entertainment">休閒娛樂</option>
          <option {{#eq record.category 'food'}}selected{{/eq}} value="food">餐飲食品</option>
          <option {{#eq record.category 'others'}}selected{{/eq}} value="others">其他</option>
        </select>
      </div>
      <input required type="text" placeholder="金額" name="amount" class="form-control input-area"
        value="{{ record.amount }}">
      <button type="submit" class="btn btn-outline-primary mt-3 mb-5">送出</button>
    </form>
  </div>
</div>